<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" >

    <stylesheets>
        <URL value = "@/css/style.css"/>
    </stylesheets>

    <Button text="send message"  AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" prefWidth="180" prefHeight="0" onAction="#sendMsg" />

    <TextField fx:id="textField" AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="180" prefHeight="0" onAction="#sendField"/>
    <TextArea fx:id="textArea" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="40" prefWidth="500"/>


</AnchorPane>

